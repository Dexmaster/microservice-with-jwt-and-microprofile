<div class="row">
    <div class="col-md-12">
        <div class="mx-auto mb-3 mt-3">
            <h5 class="display-5">{{title}} ({{year}})</h5>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="mx-auto">
            <div class="card">
                <div class="card-body px-1 py-1">
                    <div class="container">
                        <div class="row">
                            <div class="col m-1">
                                <div class="text-muted">TITLE</div>
                                <div>{{title}}</div>
                            </div>
                            <div class="col m-1">
                                <div class="text-muted">DIRECTOR</div>
                                <div>{{director}}</div>
                            </div>
                            <div class="col m-1">
                                <div class="text-muted">GENRE</div>
                                <div>{{genre}}</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col m-1">
                                <div class="text-muted">RATING</div>
                                <div><i class="fa fa-star text-warning"></i> {{rating}}/10</div>
                            </div>
                            <div class="col m-1">
                                <div class="text-muted">YEAR</div>
                                <div>{{year}}</div>
                            </div>
                            <div class="col"></div>
                        </div>
                        <hr/>
                        <div class="row">
                            <div class="col">
                                <div class="ux-comments">
                                    <h5>COMMENTS</h5>
                                    {{#each comments}}
                                        <div class="row comment-mock comment-{{this.id}}">
                                            <div class="col">
                                                <div class="mt-3 g-mb-30 media-comment d-flex">
                                                    <img class="rounded-circle mr-3" src="{{this.email}}"
                                                         alt="Image Description" height="50" width="50">
                                                    <div class="media-body">
                                                        <div class="d-flex">
                                                            <h5 class="h5 mb-0">{{this.author}}</h5>
                                                            <span class="">{{this.timestamp}}</span>
                                                        </div>
                                                        <p>{{this.comment}}</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {{/each}}
                                    <div class="row comment-mock comment-{{this.id}}">
                                        <div class="col">
                                            <div class="mt-3 g-mb-30 media-comment d-flex">
                                                <a title="{{this.author}}">
                                                    <img class="ux-avatar rounded-circle mr-3" src="" height="50" width="50">
                                                </a>
                                                <div class="media-body">
                                                    <form class="form-comment">
                                                        <textarea class="form-control" placeholder="Message..." name="comment"></textarea>
                                                        <button class="btn float-right btn-primary my-3 ux-send-comment" type="submit">Comment</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
